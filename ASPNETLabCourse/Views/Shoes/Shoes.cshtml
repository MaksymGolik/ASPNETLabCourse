<!doctype html>
<html>
<head>
 <meta name="viewport" content="width=device-width"/>
 <title>Shoes</title>
</head>
<body>
	<div class="container-fluid">
		<h2 class="text-center my-5 fw-bold">@Model.Name</h2>
		<div class="row text-muted">
			<div class="col-12 col-md-6">
				<img src="@Model.ImageUrl" alt="..." class="img-fluid w-150 h-auto mb-5">
			</div>
			<div class="col-12 col-md-6">
				<div class="description">
					<p class="fw-bold text-justify">@Model.Description</p>
				</div>
				<div class="row text-muted">
					<div class="col-6 ">
						<p class="fw-bold">Цільова аудиторія:</p>
						@switch (@Model.TargetGender)
						{
							case TargetGender.Male:
								<p>Чоловічі</p>
								break;
							case TargetGender.Female:
								<p>Жіночі</p>
								break;
							case TargetGender.Unisex:
								<p>Універсальні</p>
								break;
						}

						<p class="fw-bold text-muted ">Розмір:</p>
						<p>@Model.Size</p>
					</div>
				</div>
				<p class="fw-bold fs-4 text-success mt-3">@Model.Price.ToString("c")</p>
				<form action="/ShopCart/AddToCart" method="get" class="add_to_cart_form">
                            <input type="number" name="Id" value="@Model.Id" class="Id" style="display: none">
                            <input type="number" value="1" name="Quantity" class="Quantity" min="1" max="@Model.AvailableQuantity" placeholder="К-сть" style="width:50px">
                            <button type="submit" class="btn btn-primary">Додати до кошику</button>
                </form>
			</div>
		</div>
	</div>
</body>
</html>